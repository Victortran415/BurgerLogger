<h1>EAT DA BURGER!!</h1>

<ul>
    {{#each burgers}}
    {{#unless devoured}}

    {{/unless}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">
    <div class="form-burger">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
        <button type="submit">Add Burger</button>
    </div>


</form>