
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>NOM ON SOME BURGER</h1>
            <img src="/assets/img/burger.png" alt="" style="width: 200px" id="burger-image">
        </div>
    </div>


<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">List of Delicious Burgers:</h2>
                <ul class="left-text listBurger">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li class="pb-2 burgerList">
                        {{burger_name}}
                        <button class="btn btn-primary devourBtn" burgerID="{{id}}" type="button">NOMS!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Devoured Burgers:</h2>
                <ul class="right-text list-burger">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="burgerList">
                        {{burger_name}}
                        <button class="btn btn-primary removeBtn" id="removeBtn" burgerID="{{id}}" type="button">REMOVE!</button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h2 style="text-align: center;">Add A Burger</h2>
                <div class="row col-md-3 mx-auto">
                    <form class="input-group" id="addButtonBtn">
                        <input type="text" id="burgerName" class="form-control" placeholder="Insert Burger Here:" style="font-size: 15pt; width:225px;">
                        <div class="input-group-append">
                            <br>
                            <button class="btn btn-primary" id="addBtn" type="submit" style="font-size: 20px;" >Add Burger</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


